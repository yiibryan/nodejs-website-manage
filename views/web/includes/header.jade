header.container-fluid
    .topheader
        .collapse.navbar-collapse
            p: h3 #{website.title}
            p: span #{website.description}
    .topnav
        .navbar-header.navbar-inverse
            button.navbar-toggle.navbar-inverse(type='button',data-toggle='collapse',
            data-target="#navbar-collapse-1",aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand.navbar-inverse(href='#',aria-expanded="false") #{website.title.substring(0,7)}
        #navbar-collapse-1.collapse.navbar-collapse.navbar-inverse
            ul.nav.navbar-nav.navbar-inverse
                li: a(href='/') 网站首页
                li: a(href='/company') 公司介绍
                li: a(href='/product/list/0') 供应产品
                li: a(href='/honor/list') 荣誉资质
                li: a(href='/photo/list') 公司相册
                li: a(href='/contact') 联系我们

section.container-fluid
    #carousel-generic-1.carousel.slide(data-ride="carousel")
        -var carousellist = website.carousel.split('|')
        // 下方小圆点
        ol.carousel-indicators
            -for (var i in carousellist)
                li(data-target="#carousel-generic-1",data-slide-to= i,class= i==0?'active':'')

        // 包装的幻灯片
        .carousel-inner(role="listbox")
            -for (var i in carousellist)
                .item(class= i==0?'active':''): img(src= carousellist[i])
                //.carousel-caption 第一张轮播
        // 控制器
        a.left.carousel-control(href="#carousel-generic-1",role="button",data-slide="prev")
            span.glyphicon.glyphicon-chevron-left
            span.sr-only Previous
        a.right.carousel-control(href="#carousel-generic-1",role="button",data-slide="next")
            span.glyphicon.glyphicon-chevron-right
            span.sr-only Next